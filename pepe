#!/bin/bash

for (( i=0; i<${#pattern}; i++ ))
do
  echo -n "${pattern:$i:1}"
  sleep 0.05
done
echo ""
sleep 1
pattern="Hacking your Computer..."

for (( i=0; i<${#pattern}; i++ ))
do
  echo -n "${pattern:$i:1}"
  sleep 0.08
done
sleep 1
echo ""
